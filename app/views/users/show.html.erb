<!--ユーザーの詳細-->
<div class="container">
  <div class="row">
    <h3><%= @user.name %></h3>
    <%= image_tag @user.get_profile_image(100,100) %>
    <% if @user == current_user %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
  </div>
</div>

